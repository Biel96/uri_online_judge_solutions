import java.io.IOException;
import java.util.Scanner;
public class Main {
 
    public static void main(String[] args) throws IOException {
 
        Scanner read = new Scanner (System.in);
        
        int n = read.nextInt();
        
        for(int i=0; i<n; i++){
            int x = read.nextInt();
            if(x%2 == 0){
                System.out.println("0");
            }else{
                System.out.println("1");
            }
        }
    }
}
